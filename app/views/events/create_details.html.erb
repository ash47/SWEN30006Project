<h2>details</h2>

<%= form_tag(create_event_post_path(@club, Event.stage_tickets), method: "post", multipart: true) do %>
  <%= label_tag(:event_title, "Event Title:") %><br>
  <%= text_field_tag(:event_title, @event_title) %>
  <br>
  <%= label_tag(:event_description, "Description:") %><br>
  <%= text_area_tag(:event_description, @event_description) %>
  <br>
  <%= label_tag(:event_location, "Event Location:") %><br>
  <%= text_field_tag(:event_location, @event_location) %>
  <br>
  <%= label_tag(:event_date, "Date:") %><br>
  <%= date_select(:event_date, :date, {selected: @event_time}) %>
  <br>
  <%= label_tag(:event_time, "Start Time:") %><br>
  <%= time_select(:event_time, :time, {selected: @event_time}) %>
  <br>
  <%= label_tag(:event_duration, "Event Duration (hours):") %><br>
  <%= text_field_tag(:event_duration, @event_duration) %>
  <br>
  <strong>Images:</strong>
  <%= file_field_tag :imagea %><br>
  <% if @imagea %><%= image_tag @imagea %><br><br><% end %>
  <%= file_field_tag :imageb %><br>
  <% if @imageb %><%= image_tag @imageb %><br><br><% end %>
  <%= file_field_tag :imagec %><br>
  <% if @imagec %><%= image_tag @imagec %><br><br><% end %>
  <br><br>
  <%= submit_tag("Cancel", name: 'cancel', confirm: 'Are you sure you want to cancel making a new event?') %>
  <%= submit_tag("Next") %>
<% end %>
