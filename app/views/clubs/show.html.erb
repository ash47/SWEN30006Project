<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @club.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @club.description %>
</p>

<p>
  <strong>Website:</strong>
  <%= @club.website %>
</p>

<p><strong>Member Count:</strong> <%= @club.memberships.count %></p>

<% if @is_club_admin %>
  <p><strong>You are an admin!</strong></p>
  <p><%= link_to 'Create Event', create_event_path(@club, Event.stage_new) %></p>
<% end %>

<p><strong>Club Events</strong></p>
<% if @events.count > 0 %>
  <% @events.each do |event| %>
    <p><%= link_to event.name, event_path(event) %></p>
  <% end %>
<% else %>
  <p>No events</p>
<% end %>

<p>Our admins:</p>
<% @admins.each do |admin| %>
  <p><%= admin.id %> - <%= admin.full_name %></p>
<% end %>

<% if @is_club_member %>
  <% if not @is_club_admin %>
    <%= link_to 'Leave Club', leave_club_path(@club) %> |
  <% else %>
    <%= link_to 'Edit', edit_club_path(@club) %> |
  <% end %>
<% else %>
  <%= link_to 'Join', join_club_path(@club) %> |
<% end %>
<%= link_to 'Back', clubs_path %>
